/ Logo partial with dark/light mode support
/ Usage: = render 'shared/logo', alt: 'Company Logo', style: 'margin-bottom: 24px;'
- logo_alt = local_assigns[:alt] || AppConstants::APP_NAME
- container_style = local_assigns[:style] || "margin-bottom: 24px;"

%table{role: "presentation", cellspacing: "0", cellpadding: "0", border: "0", width: "100%", style: container_style}
  %tr
    %td{style: "text-align: center;"}
      - if AppConstants::LOGO_LIGHT_URL.present? || AppConstants::LOGO_DARK_URL.present?
        / Show light logo by default and dark logo for dark mode
        - if AppConstants::LOGO_LIGHT_URL.present?
          %img{src: AppConstants::LOGO_LIGHT_URL, alt: logo_alt, style: "max-width: 200px; height: auto; display: block; margin: 0 auto;", class: "logo-light"}
        - if AppConstants::LOGO_DARK_URL.present?
          %img{src: AppConstants::LOGO_DARK_URL, alt: logo_alt, style: "max-width: 200px; height: auto; display: none; margin: 0 auto;", class: "logo-dark"}
      - else
        / Fallback text logo when no images are configured
        %h2{style: "margin: 0; font-size: 24px; font-weight: 700; color: #3b82f6;"}
          = AppConstants::APP_NAME